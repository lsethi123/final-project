<div class='col-md-9'>
  <h2>List Your Experience</h2>
  <h4>Step 1: Basic information</h4>

    <form class="new-tour">
      <div class="form-group">
        <label for='destination'>Destination</label>
          <select name="tour[destination_id]" id='destination' class='form-control'>
            <% places.each( function(place) { %>
              <option value="<%=place.escape('id')%>"><%=place.escape('name')%></option>
            <% }); %>
          </select>
      </div>

      <div class="form-group">
        <label for 'title'>Title</label>
        <input type="text"
              id='title'
              name="tour[title]"
              class='form-control'
              placeholder='Title'>
      </div>

      <div class="form-group">
        <label for 'description'>Description</label>
        <textarea name="tour[description]"
                  id='description'
                  class='form-control'
                  placeholder='Describe what makes your experience unique'
                  ></textarea>
      </div>

      <div class="form-group">
        <label for='price'>Price</label>
        <input id='price' type="number" name="tour[price]" class='form-control'>
      </div>

      <button type="button btn-primary" class='submit-booking btn btn-primary'>Save</button>
    </form>

</div>

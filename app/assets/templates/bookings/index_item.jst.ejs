<td class='img-thumb'></td>
<td><a href="#tours/<%=booking.escape('tour_id')%>">
      <%= booking.tour().escape('title')%>, <%=booking.escape('tour_city')%>
    </a>
</td>
<td><%=booking.escape('num_people')%></td>
<td><%=new Date(booking.escape('tour_date')).toDateString()%></td>
<td><%=new Date(booking.escape('tour_date')).toTimeString().slice(0,5)%></td>
<td><%= booking.escape('status') %></td>
<td>
  <% if (booking.escape('status') !== "cancelled") { %>
    <button type="button" class="cancel-btn btn btn-danger" >Cancel</button>
  <% } %>
</td>
